@{
    ViewData["Title"] = "So sánh ảnh";
}

<h2>So sánh khuôn mặt</h2>

<form method="post" enctype="multipart/form-data" asp-action="Compare">
    <div class="mb-3">
        <label for="testImage" class="form-label">Chọn ảnh để kiểm tra</label>
        <input type="file" name="testImage" accept="image/*" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">So sánh</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert @(ViewBag.Success ? "alert-success" : "alert-danger") mt-3">
        @ViewBag.Message
    </div>
}
